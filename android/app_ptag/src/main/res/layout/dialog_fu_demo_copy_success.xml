<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/bg"
        android:layout_width="280dp"
        android:layout_height="245dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/dialog_bg"
        />

    <ImageView
        android:layout_width="280dp"
        android:layout_height="145dp"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        android:src="@drawable/bg_popup"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/bg"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        android:layout_marginTop="24dp"
        android:src="@drawable/icon_popup_successful"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/icon"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        android:layout_marginTop="7dp"
        android:text="口令复制成功！"
        android:textColor="#27272B"
        android:textSize="18sp"
        />

    <TextView
        android:id="@+id/copy_text_view"
        android:layout_width="200dp"
        android:layout_height="44dp"
        app:layout_constraintTop_toBottomOf="@id/title"
        app:layout_constraintLeft_toLeftOf="@id/bg"
        app:layout_constraintRight_toRightOf="@id/bg"
        android:textIsSelectable="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/dialog_copy_bg"
        android:gravity="center"
        android:textColor="#646778"
        android:textSize="18sp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>