<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#FFF"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="@id/top_line"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/part_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#e1e5f0"
        app:layout_constraintBottom_toTopOf="@id/part_recycler_view"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.25"
        />

    <ImageView
        android:id="@+id/icon"
        android:layout_width="58dp"
        android:layout_height="58dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@id/vertical_guideline"
        app:layout_constraintTop_toTopOf="@id/seek_bar_recycler_view"
        app:layout_constraintBottom_toBottomOf="@id/seek_bar_recycler_view"
        android:layout_margin="20dp"
        android:src="@drawable/icon_morefunction_build_avatar"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/seek_bar_recycler_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toRightOf="@id/vertical_guideline"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/line1"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/item_type_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/seek_bar_recycler_view"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:background="@drawable/bg_item_type_group"
        />

    <View
        android:id="@+id/top_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintBottom_toTopOf="@id/item_type_recycler_view"
        android:layout_marginBottom="16dp"
        />

    <ImageView
        android:id="@+id/reset_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/item_type_recycler_view"
        android:src="@drawable/icon_clear_nor"
        />

    <TextView
        android:id="@+id/finish_btn"
        android:layout_width="84dp"
        android:layout_height="36dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/btn_gray_bg"
        android:gravity="center"
        android:text="应用"
        android:textSize="14sp"
        android:textColor="#FFF"
        />

    <LinearLayout
        android:id="@+id/mode_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="24dp"
        android:layout_marginStart="16dp"
        android:padding="4dp"
        android:background="@drawable/bg_facepup_mode_group"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/mode_btn_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="简易"
            android:background="@drawable/bg_facepup_mode_text_btn"
            />
        <TextView
            android:id="@+id/mode_btn_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:gravity="center"
            android:minWidth="52dp"
            android:minHeight="28dp"
            android:text="专家"
            android:background="@drawable/bg_facepup_mode_text_btn"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>