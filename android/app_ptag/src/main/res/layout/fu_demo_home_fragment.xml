<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.home.FuDemoHomeFragment">

    <com.faceunity.core.weight.GLTextureView
        android:id="@+id/gl_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/scene_bg"
        />
    <com.faceunity.pta.pta_core.widget.TouchView
        android:id="@+id/touch_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/manager_avatar_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:drawableStart="@drawable/icon_homepage_avatar_manager"
        android:paddingStart="6dp"
        android:gravity="center_vertical"
        android:text="形象管理"
        android:textColor="#4A5076"
        android:textSize="14sp"
        android:background="@drawable/btn_white_bg"
        />

    <ImageView
        android:id="@+id/save_photo_btn"
        android:layout_width="40dp"
        android:layout_height="40dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="22dp"
        android:src="@drawable/icon_homepage_saveimage"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:paddingStart="44dp"
        android:paddingEnd="44dp"
        android:paddingTop="11dp"
        android:paddingBottom="11dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/bg_button_homepage_bottom"
        android:orientation="horizontal"
        >
        <TextView
            android:id="@+id/edit_avatar_btn"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_morefunction_model_edit"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:text="编辑"
            android:textSize="16sp"
            android:textColor="#27272B"
            />

        <TextView
            android:id="@+id/build_avatar_btn"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_morefunction_build_avatar"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="38dp"
            android:text="生成"
            android:textSize="16sp"
            android:textColor="#27272B"
            />

        <TextView
            android:id="@+id/drive_btn"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:drawableTop="@drawable/icon_morefunction_drive"
            android:layout_gravity="center_vertical"
            android:gravity="center_horizontal"
            android:layout_marginStart="38dp"
            android:text="驱动"
            android:textSize="16sp"
            android:textColor="#27272B"
            />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>