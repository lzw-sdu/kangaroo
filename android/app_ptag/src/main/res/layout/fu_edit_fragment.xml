<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.edit.FuDemoEditFragment">

    <com.faceunity.pta.pta_core.widget.TouchGLTextureView
        android:id="@+id/gl_texture_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/scene_bg"
        />

    <com.faceunity.app_ptag.ui.edit.weight.control.AvatarControlView
        android:id="@+id/avatar_control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <TextView
        android:id="@+id/back_btn"
        android:layout_width="110dp"
        android:layout_height="40dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="22dp"
        android:drawableStart="@drawable/icon_edit_back_to_homepage"
        android:paddingStart="6dp"
        android:gravity="center_vertical"
        android:text="返回主页"
        android:textColor="#4A5076"
        android:textSize="14sp"
        android:background="@drawable/btn_white_bg"
        />

    <com.faceunity.app_ptag.ui.edit.weight.facepup.FacepupControlView
        android:id="@+id/facepup_control_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        />

</androidx.constraintlayout.widget.ConstraintLayout>